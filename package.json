{
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "git push --follow-tags"
  },
  "peerDependencies": {
    "@asany/editor": ">=0.2.5",
    "react": ">=16",
    "sunmao": ">=0.2.5"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "sunmao-editor",
  "author": "李茂峰",
  "repository": "https://github.com/limaofeng/sunmao-editor",
  "module": "dist/sunmao-editor.esm.js",
  "size-limit": [
    {
      "path": "dist/sunmao-editor.cjs.production.min.js",
      "limit": "200 KB",
      "ignore": [
        "fonteditor-core"
      ]
    },
    {
      "path": "dist/sunmao-editor.esm.js",
      "limit": "200 KB",
      "ignore": [
        "fonteditor-core"
      ]
    }
  ],
  "devDependencies": {
    "@apollo/client": "^3.4.9",
    "@asany/editor": "^0.2.6",
    "@asany/icons": "^0.1.11",
    "@asany/sortable": "^0.1.22",
    "@babel/core": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@size-limit/preset-small-lib": "^5.0.3",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/addons": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@types/lodash-es": "^4.17.4",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "antd": "^4.16.13",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "cssnano": "^4.1.11",
    "eslint-plugin-prettier": "^3.4.1",
    "fake-indexeddb": "^3.1.3",
    "graphql": "^15.5.1",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-fetch-mock": "^3.0.3",
    "less": "^4.1.1",
    "less-loader": "^7.3.0",
    "lodash-es": "^4.17.21",
    "pinst": "^2.1.6",
    "postcss": "^7.0.36",
    "postcss-modules": "^4.2.2",
    "react": "^17.0.2",
    "react-dnd": "^14.0.3",
    "react-dnd-html5-backend": "^14.0.1",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.1",
    "size-limit": "^5.0.3",
    "sunmao": "^0.2.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.1.1",
    "**/@typescript-eslint/parser": "^4.1.1"
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/test/globals-test.ts"
    ]
  }
}
